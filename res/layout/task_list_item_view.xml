<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/lblBullet"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblTaskNo"
            style="@style/text_single_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            android:textSize="@dimen/normal_text_font_size" />

        <TextView
            android:id="@+id/lblTaskDescription"
            style="@style/text_single_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|bottom"
            android:textColor="@color/gray"
            android:textIsSelectable="false"
            android:textSize="@dimen/small_text_font_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblBullet"
        style="@style/text_single_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="@string/bullet"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/big_text_font_size" />

</RelativeLayout>