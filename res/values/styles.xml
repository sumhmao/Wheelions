<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Wheelions -->
    <style name="horizontal_line_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/separator_thick</item>
    </style>

    <style name="vertical_line_separator">
        <item name="android:layout_width">@dimen/separator_thick</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="text_single_line">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="default_listview">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
    </style>

</resources>